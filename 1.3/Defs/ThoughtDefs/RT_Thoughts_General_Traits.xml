<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>MoodOffsetRTHealthy</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>RT_Healthy</li>
    </requiredTraits>
    <stages>
      <li>
        <label>Healthy</label>
        <description>It's nice to have a healthy body.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MoodOffsetRTChronicallyIll</defName>
    <workerClass>ThoughtWorker_AlwaysActive</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>RT_ChronicallyIll</li>
    </requiredTraits>
    <stages>
      <li>
        <label>Chronically Ill</label>
        <description>I am feeling a little poorly, am I sick again?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
