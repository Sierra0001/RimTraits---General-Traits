<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[SYR] Trait Value</li> <!-- Checks for this mod, if not active there is no reason to add values -->
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Coordinated"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Clumsy"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Hardy"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Feeble"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_EasilyAmused"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_ConstantlyBemused"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Inquisitive"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>20</li>
              </traitValues>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>*/TraitDef[defName="RT_Ignorant"]</xpath>
          <value>
            <li Class="SyrTraitValue.TraitValueExtension">
              <traitValues>
                <li>-20</li>
              </traitValues>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>
